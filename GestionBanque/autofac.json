{
  "defaultAssembly": "GestionBanque",
  "components": [
    // 1. Enregistrement des ViewModels (ils seront auto-injectés)
    {
      "type": "GestionBanque.ViewModels.MainViewModel"
    },
    {
      "type": "GestionBanque.ViewModels.BanqueViewModel"
    },

    // 2. Enregistrement de la vue principale
    {
      "type": "GestionBanque.Views.MainView"
    },

    // 3. Enregistrement des services
    {
      "type": "GestionBanque.Views.InteractionUtilisateurGui",
      "services": [
        {
          "type": "GestionBanque.ViewModels.Interfaces.IInteractionUtilisateur"
        }
      ]
    },

    // 4. Enregistrement des DataServices avec paramètres de constructeur
    // Note: C'est ici qu'on gère les paramètres requis par les constructeurs
    // de ClientSqliteDataService et CompteSqliteDataService.
    {
      "type": "GestionBanque.Models.DataService.ClientSqliteDataService",
      "services": [
        {
          "type": "GestionBanque.Models.DataService.IDataService`1[[GestionBanque.Models.Client, GestionBanque]]"
        }
      ],
      "parameters": {
        "nomBd": "banque.bd"
      }
    },
    {
      "type": "GestionBanque.Models.DataService.CompteSqliteDataService",
      "services": [
        {
          "type": "GestionBanque.Models.DataService.IDataService`1[[GestionBanque.Models.Compte, GestionBanque]]"
        }
      ],
      "parameters": {
        "nomBd": "banque.bd"
      }
    }
  ]
}